<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$([MSBuild]::GetPathOfFileAbove($(MSBuildThisFile), '$(MSBuildThisFileDirectory)..\'))" />

  <PropertyGroup>
    <IsCommonProject>false</IsCommonProject>
    <IsCommonProject Condition="'$(MSBuildProjectFile)' == 'JWT.Tests.Common.csproj'">true</IsCommonProject>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\JWT\JWT.csproj" />
  </ItemGroup>

  <Target DependsOnTargets="Build" AfterTargets="Build" Name="test1">
    <Message Importance="high" Text="MSBuildProjectFile: $(MSBuildProjectFile)"  />
    <Message Importance="high" Text="MSBuildProjectName: $(MSBuildProjectName)"  />
    <Message Importance="high" Text="IsCommonProject: $(IsCommonProject)"  />
  </Target>

  <ItemGroup Condition="!$(IsCommonProject)">
    <Compile Include="..\JWT.Tests.Common\**\*Tests.cs">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Include="..\JWT.Tests.Common\Properties\AssemblyInfo.cs">
      <Link>Properties\AssemblyInfo.cs</Link>
    </Compile>

    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="2.2.8" />
    <PackageReference Include="MSTest.TestFramework" Version="2.2.8" />
    <PackageReference Include="System.Security.Cryptography.Csp" Version="4.3.0" />

    <ProjectReference Include="..\JWT.Tests.Common\JWT.Tests.Common.csproj" />
  </ItemGroup>

</Project>